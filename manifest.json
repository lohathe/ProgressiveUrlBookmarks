{
    "manifest_version": 2,
    "name": "Progressive Url Bookmarks",
    "version": "0.1",
    "description": "Keep only one bookmark for each content site: keep bookmarks updated to the last episode/chapter",
    
    "icons": {
        "48": "icons/feather_big.svg",
        "96": "icons/feather_big.svg"
    },

    "permissions": [
        "activeTab",
        "bookmarks",
        "storage",
        "tabs"
    ],

    "browser_action": {
        "default_icon": "icons/feather_big.svg",
        "default_title": "PUB: this is the last!",
        "default_popup": "popup.html"
    },

    "options_ui": {
        "page": "options.html",
        "browser_style": true
    },

    "background": {
        "scripts": ["background.js"]
    },
    
    "applications": {
        "gecko": {
            "id": "lohathe@github.com"
        }
    }
}
